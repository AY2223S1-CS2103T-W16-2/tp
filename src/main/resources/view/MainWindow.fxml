<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" type="javafx.stage.Stage"
  xmlns="http://javafx.com/javafx/8" title="FoodRem" minWidth="450" minHeight="450" onCloseRequest="#handleExit">
  <icons>
    <Image url="@/images/address_book_32.png"/>
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@FoodRem.css"/>
      </stylesheets>

      <VBox>
        <!-- Menu Bar -->
        <MenuBar fx:id="menuBar" VBox.vgrow="NEVER" styleClass="menu-bar">
          <Menu text="Menu">
            <MenuItem fx:id="helpMenuItem" onAction="#handleHelp" text="Help"/>
            <MenuItem onAction="#handleExit" text="Exit"/>
          </Menu>
        </MenuBar>

        <!-- Main Body -->
        <HBox styleClass="main-body">
          <!-- Left Column -->
          <VBox spacing="12">
            <StackPane VBox.vgrow="NEVER" fx:id="commandBoxPlaceholder" styleClass="command-placeholder"/>
            <VBox fx:id="personList" styleClass="list-placeholder" VBox.vgrow="ALWAYS">
              <StackPane fx:id="itemListPanelPlaceholder" VBox.vgrow="ALWAYS"/>
            </VBox>
          </VBox>

          <!-- Right Column -->
          <VBox>
            <StackPane VBox.vgrow="NEVER" fx:id="resultDisplayPlaceholder" styleClass="pane-with-border" minHeight="100" prefHeight="100" maxHeight="100">
              <padding>
                <Insets top="5" right="10" bottom="5" left="10"/>
              </padding>
            </StackPane>
          </VBox>
        </HBox>
        <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER"/>
      </VBox>
    </Scene>
  </scene>
</fx:root>
